import math 

print(" Format funtion") #TASK 1 Numbers(a)

def format_number(numbers, format_char):
    """Returns a string formatted by the given specifier."""
    return format(numbers, format_char)

value = 145 
specifier = 'o'
result = format_number(value, specifier)

print(f"Result of {value} using '{specifier}': {result}")
print("-" * 40)

print(" Circle area and Water Calculation") #TASK 1 Numbers(b)

pi_value = 3.14
radius = 84 
water_per_sq_meter = 1.4

pond_area = pi_value * ( radius ** 2)

total_water = pond_area * water_per_sq_meter

total_water_int = int(total_water)

print(f" Area of pond = {pond_area:.2f}")
print(f" Total water in pound = {total_water_int}")
print("-" * 40)

print(" Calculating Speed") #TASK 1 Numbers(c)

distance = 490
time_minutes = 7

time_seconds = time_minutes * 60 
speed = distance / time_seconds 
speed_int = int(speed)

print("distance = {distance} , time = {time_minutes} ({time_seconds})")
print(f" Speed in meters per second = {speed_int}")